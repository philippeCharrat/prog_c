   char *ptr_citation = citations;  
   char *ptr_citation_verif = citations;
   int trouve = 0;

   //Recuperation de la sequence a verifier. 
   printf("Les phrases sont : \n");
   for (int i=0; i < 10; i++) {
	printf("phrase %d :",i);
	for(int j=0; j <100; j++) {
    		printf("%c",*ptr_citation);
		ptr_citation = ptr_citation + 1;
	}
	printf("\n");
    }

/*
